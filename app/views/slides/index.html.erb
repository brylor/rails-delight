<h1>Listing slides</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Content</th>
    <th>Order</th>
    <th>Presentation</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @slides.each do |slide| %>
  <tr>
    <td><%= slide.name %></td>
    <td><%= slide.content %></td>
    <td><%= slide.order %></td>
    <td><%= slide.presentation %></td>
    <td><%= link_to 'Show', slide %></td>
    <td><%= link_to 'Edit', edit_slide_path(slide) %></td>
    <td><%= link_to 'Destroy', slide, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

